{% extends 'base.html.twig' %}
{% block title %} Authorization{% endblock %}

{% block header %}
    {{ include('base/header.html.twig', {isAuthorizePage: true}) }}
{% endblock %}
{% block body %}
    <!-- Begin page content -->
    <main class="flex-shrink-0 main">
         <div class="container mt-5">
             {% for message in app.flashes('error') %}
                 <div class="alert alert-secondary w-auto" role="alert">
                     {{ message }}
                 </div>
             {% endfor %}
            <h2>Access form.</h2>
        </div>
        <div class="container">
            <div class="col-md-10 col-lg-10">
                <div class="border">
                    <div class="question bg-white p-3 border-bottom">
                        <div class="d-flex flex-row justify-content-between align-items-center mcq">
                            <p>You have to add correct token for getting access to creating new></p>
                        </div>
                    </div>
                    {{ form_start(form) }}
                        <div class="my-custom-class-for-errors">
                            {{ form_errors(form)}}
                        </div>
                        <div class="row my-4 m-2">
                        <div class="input-group w-75 input-group-sm mb-3">
                            <span class="input-group-text" id="inputGroup-sizing-sm">{{ form_label(form.token) }}</span>
                            {{ form_widget(form.token) }}
                            {{ form_errors(form.token) }}
                        </div>
                    </div>
                        <div class="m-3">
                            {{ form_row(form.save, { 'label': 'Save' }) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </main>
{% endblock %}
