{% extends 'base.html.twig' %}
{% block title %} Start Quiz{% endblock %}
{% block header %}
    {{ include('base/header.html.twig') }}
{% endblock %}
{% block body %}
    <main class="flex-shrink-0 main mt-5">
        <div class="container">
            <div>
                <p>We start you quiz. Our topic will be <b>{{ quiz.name }}</b>.</p>
                <p>You must select correct answer which you think is correct. When you will be ready, please click on button start.</p>
            </div>
            <div>
                <a class="btn btn-primary" href="{{ path('quiz_questions', {id: quiz.id, step: 1}) }}" role="button">Start</a>
            </div>
        </div>
    </main>
{% endblock %}
