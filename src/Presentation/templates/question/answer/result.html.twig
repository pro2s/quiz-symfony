{% extends 'base.html.twig' %}
{% block title %} Result of Quiz{% endblock %}
{% block header %}
    {{ include('base/header.html.twig') }}
{% endblock %}
{% block body %}
    <main class="flex-shrink-0 main mt-5">
        <div class="container">
            <div class="d-flex justify-content-center row">
                <div class="col-md-10 col-lg-10">
                    <div class="border">
                        <div class="question bg-white p-3 border-bottom">
                            <div class="d-flex flex-row justify-content-between align-items-center mcq">
                                <h4>You've passed quiz "{{ quiz.name }}"</h4>
                            </div>
                            <div class="d-flex flex-row justify-content-between align-items-center mcq">
                                <p>You've  answered on total {{ totalQuestions }}. Total correct answers <b>{{ totalCorrectAnswers }}</b>.</p>
                            </div>
                        </div>
                        <div class="d-flex flex-row justify-content-between align-items-center p-3 bg-white">
                            <a href="{{ path('homepage') }}">
                                <button class="btn btn-primary border-success align-items-center btn-success" type="button">
                                    List Of Quizzes<i class="fa fa-angle-right ml-2"></i>
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
