{% extends 'base.html.twig' %}
{% block title %} Answer on Question {{ step }}{% endblock %}
{% block header %}
    {{ include('base/header.html.twig') }}
{% endblock %}
{% block body %}
    <main class="flex-shrink-0 main mt-5">
        <div class="container">
            <div class="d-flex justify-content-center row">
                <div class="col-md-10 col-lg-10">
                    <div class="border">
                        <div class="question bg-white p-3 border-bottom">
                            <div class="d-flex flex-row justify-content-between align-items-center mcq">
                                <h4>You've answered on question "{{ question.text }}"</h4>
                            </div>
                            <div class="d-flex flex-row justify-content-between align-items-center mcq">
                                <p>You select answer {{ answer.text }}. This answer is <b>{% if isCorrectAnswer %} correct {% else %} wrong{% endif %}!</b></p>
                            </div>
                            {% if isFinalStep %}
                                <div class="d-flex flex-row justify-content-between align-items-center mcq">
                                    <p>You've answered on all questions on next page you will see total result!</p>
                                </div>
                            {% endif %}
                        </div>
                        {% if isFinalStep %}
                        <div class="d-flex flex-row justify-content-between align-items-center p-3 bg-white">
                            <a href="{{ path('quiz_result', {id: quizId}) }}">
                                <button class="btn btn-primary border-success align-items-center btn-success" type="button">
                                    Result of Quiz<i class="fa fa-angle-right ml-2"></i>
                                </button>
                            </a>
                        </div>
                        {% else %}
                            <div class="d-flex flex-row justify-content-between align-items-center p-3 bg-white">
                                <a href="{{ path('quiz_questions', {id: quizId, step: nextStep}) }}">
                                    <button class="btn btn-primary border-success align-items-center btn-success" type="button">
                                        Next<i class="fa fa-angle-right ml-2"></i>
                                    </button>
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
